<div class="information">
  <h1>Review: by <%= @review.name %></h1>
  <h2>Product: <%= @product.name %>, recently purchased.</h2>
  <h3>This is what the new owner had to say: <%= @review.body %></h3>
  <h3>Rating: <%= @review.rating %> out of 5 stars.</h3>
</div>
<div class="logic">
<p><%= link_to "Edit review", edit_product_review_path(@product, @review) %></p>
<p><%= link_to "Delete review", product_review_path(@product, @review),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to product", product_path(@product) %></p>
</div>
