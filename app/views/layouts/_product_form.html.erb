<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :How_much_do_you_want? %>
  <%= f.text_field :cost %>
  <br>
  <br>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <br>
  <br>
  <%= f.submit  %>
<% end %>
